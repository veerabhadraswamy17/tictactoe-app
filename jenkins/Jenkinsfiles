pipeline {
    agent {
        docker {
            image 'node:lts-buster-slim'
            args '-u root' // Add any additional Docker arguments if needed
            ports '3000:3000'
        }
    }
    environment {
        CI = 'true'
    }
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run') {
            steps {
                sh 'npm start' # Adjust the start command as per your application
            }
        }
        // Add more stages as needed for your pipeline
    }
}

