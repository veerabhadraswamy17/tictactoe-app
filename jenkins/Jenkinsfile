pipeline {
  agent any
    
  tools {nodejs "nodejs"}
    
  stages {
        
    stage('Cloning Git') {
      steps {
        script{
          git branch: 'main',
              credentialsId: 'f71be2b1-73c6-4cc3-9f78-0759dffcbe45',
              url: 'https://github.com/veerabhadraswamy17/tictactoe-app.git'
        }
      }
    }
        
    stage('Install dependencies') {
      steps {
        script {
                    // Your Node.js build script
                    sh '''
                        # Increase the EventEmitter limit to suppress the warning
                        node -e "require('events').EventEmitter.defaultMaxListeners = 20;"
                        npm install
                    '''
                }
      }
    }
     
    stage('Build') {
      steps {
         sh 'npm run build'
      }
    }
    stage('Build Docker Image') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'f2833fba-ddd6-46dd-a4af-0e02f64368d4')]) {
        script {
                        def dockerImage = docker.build('veerabhadraswami/tictactoe:latest')
                        // Replace 'your-docker-repo', 'your-image-name', and 'your-tag' with your specific values.

                        // Push the Docker image to Docker Hub
                       // docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials-id') {
                       //     dockerImage.push()
                        }
        }
      }
    }
    
  }
}
