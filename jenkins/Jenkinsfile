pipeline {
  agent any
    
  tools {nodejs "nodejs"}
    
  stages {
        
    stage('Cloning Git') {
      steps {
        script{
          git branch: 'main',
              credentialsId: 'f71be2b1-73c6-4cc3-9f78-0759dffcbe45',
              url: 'https://github.com/veerabhadraswamy17/tictactoe-app.git'
        }
      }
    }
        
    stage('Install dependencies') {
      steps {
        script {
                    // Your Node.js build script
                    sh '''
                        # Increase the EventEmitter limit to suppress the warning
                        node -e "require('events').EventEmitter.defaultMaxListeners = 20;"
                        npm install
                    '''
                }
      }
    }
     
    stage('Build') {
      steps {
         sh 'npm run build'
      }
    }
    stage('Install Docker') {
            steps {
                script {
                    // Check if Docker is already installed
                    def dockerVersion = sh(script: 'docker --version', returnStatus: true)
                    if (dockerVersion.exitStatus != 0) {
                        echo 'Docker is not installed. Installing Docker...'
                        sh 'curl -fsSL https://get.docker.com -o get-docker.sh'
                        sh 'sh get-docker.sh'
                    } else {
                        echo 'Docker is already installed.'
                    }
                }
            }
        }
    stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    sh "docker build -t veerabhadraswami/tictactoe:latest ."
                }
            }
        }
    
  }
}
